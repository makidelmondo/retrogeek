<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @software, local: true) do |form| %>
      <%= form.text_field :title, placeholder: "Game title" %>
      <%= form.text_area :explanation, placeholder: "Explanation" %>
      <%= form.collection_select(:hardware_id, Hardware.all, :id, :name, {}, {class:"select-box", id:"software-hardware"}) %>
      <%= form.file_field :image, id:"item-image" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>